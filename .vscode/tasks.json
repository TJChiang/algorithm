{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: Build with clang++",
            "type": "cppbuild",
            "command": "/usr/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "--std=c++17",
                "--stdlib=libc++",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "--debug"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/opt/homebrew/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "--std=c++17",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "編譯器：/opt/homebrew/bin/g++"
        },
    ]
}